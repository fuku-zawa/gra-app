.container
  %ul
    - @profile.errors.full_messages.each do |message|
      %li= message

  = form_with(model: @profile, url: profile_path, method: "put", local: true) do |f|
    %div
      =f.label :avatar, "Avatar"
      =f.file_field :avatar
    %div
      =f.fields_for :user do |user_f|
        =user_f.label :name, "Name"
        =user_f.text_field :name
    %div
      =f.label :gender, "Gender"
      -# =f.select :gender
    %div
      =f.label :birthday, "Birthday"
      =f.date_field :birthday
    %div
      =f.label :introduction, "Introduction"
      =f.text_area :introduction

    = f.submit "保存", class: "btn-primary"



  