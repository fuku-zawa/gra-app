= render "commons/status"


.container
  .follow-top
    .follow-top-back
      = link_to :back do
        = image_tag "status/Tabs.svg"
    .follow-top-username
      Followers
    .follow-top-edit


  -# フォロワーの一覧を表示
  .follower-container
    - @followers.each do |follower|
      %ul.follower-list
        %li.follower-list-avatar
          = image_tag follower[:avatar] ,class: "avatars-comment"
        %li.follower-list-info
          .names-content
            = follower[:name]
            %p Last seen 3hours ago
      %hr
