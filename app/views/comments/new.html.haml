.status-wrapper
  .status-bar
    .status-bar-left
      =image_tag "status/B-Time Style.svg"
    .status-bar-right
      =image_tag "status/B-Mobile Signal.svg", class: "status-bar-item"
      =image_tag "status/B-Wifi.svg", class: "status-bar-item"
      =image_tag "status/B-Battery.svg", class: "status-bar-item"


.container
  = form_with(model: @comment, url: post_comments_path(@post), local: true) do |f|
    .profile-edit-top
    .profile-edit-top-back
      = link_to :back do
        = image_tag "status/Tabs.svg"
    .profile-edit-top-username
      Comment
    
    .comments
      - @comments.each do |comment|
        %ul.post-list.comments-list
          %li.post-list-avatar
            = image_tag @post.user.avatar || "default-avatar.png"
          .post-list-info
            %li
              = @post.user.name
            %p.comments-content=  comment.content
    
    %div
      = f.label :content, "内容"
    %div
      = f.text_area :content
    
    = f.submit "保存"


